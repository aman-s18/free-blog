<div class="container mt-8">
  <div class="row profile">
    <div class="col-md-4">
      <div class="profile-sidebar">
        <!-- SIDEBAR USERPIC -->
        <div class="profile-userpic">
          <%= image_tag user_image, class: "user-image" %>
        </div>
        <!-- END SIDEBAR USERPIC -->
        <!-- SIDEBAR USER TITLE -->
        <div class="profile-usertitle">
          <div class="profile-usertitle-name">
            <%= profile&.full_name %> (<%= profile&.nick_name %>)
          </div>
          <div class="profile-usertitle-job">
            <%= @user&.email %>
          </div>
        </div>
        <!-- END SIDEBAR USER TITLE -->
        <!-- SIDEBAR BUTTONS -->
        <div class="profile-userbuttons">
          <a href="tel:<%=profile&.phone%>" class="btn btn-success btn-sm">Call</a>
          <a href="mailto:<%= @user&.email %>" class="btn btn-danger btn-sm">Message</a>
          <%= link_to "Edit", edit_profile_user_path, class: "btn btn-warning btn-sm" if valid_user? %>
        </div>
        <!-- END SIDEBAR BUTTONS -->
        <!-- SIDEBAR MENU -->
        <div class="profile-usermenu">
        </div>
        <!-- END MENU -->
        <div class="portlet light bordered">
          <!-- STAT -->
          <div class="row list-separated profile-stat">
            <div class="col-md-4 col-sm-4 col-xs-6">
              <div class="uppercase profile-stat-title">0<%#= current_user.bloggers.count %></div>
              <div class="uppercase profile-stat-text">Blogs</div>
            </div>
            <div class="col-md-4 col-sm-4 col-xs-6">
              <div class="uppercase profile-stat-title">0</div>
              <div class="uppercase profile-stat-text"> Views </div>
            </div>
            <div class="col-md-4 col-sm-4 col-xs-6">
              <div class="uppercase profile-stat-title">0</div>
              <div class="uppercase profile-stat-text">Comments</div>
            </div>
          </div>
          <!-- END STAT -->
          <div>
            <h4 class="profile-desc-title">About <%= profile&.full_name %></h4>
            <span class="profile-desc-text"><%= profile&.bio %></span>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
