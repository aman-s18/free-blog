    <%= form.text_field "profile[phone]", value: profile.phone %>
  </div>

  <div>
    <%= form.label :bio, style: "display: block" %>
    <%= form.text_area "profile[bio]", value: profile.bio %>
  </div>

  <div>
    <%= form.label :picture, style: "display: block" %>
