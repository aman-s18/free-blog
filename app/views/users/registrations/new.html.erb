<div class="container">
  <h1 class="login-heading">Create New Account</h1>
  <div class="login">
    <div class="login-triangle"></div>
    <h2 class="login-header">Sign Up</h2>
    <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
      <%= render "users/shared/error_messages", resource: resource %>
      <p><%= f.email_field :email, autofocus: true, autocomplete: "email", placeholder: "Email" %></p>
      <p><%= f.password_field :password, autocomplete: "new-password", placeholder: "Password" %></p>
      <p><%= f.password_field :password_confirmation, autocomplete: "new-password", placeholder: "Password Confirmation" %></p>
      <p><%= f.submit "Sign Up" %></p>
    <% end %>
    <%= render "users/shared/links" %>
  </div>
</div>
<style type="text/css">
  body {
  background: #456;
  font-family: 'Open Sans', sans-serif;
}
</style>